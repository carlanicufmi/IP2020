@model RunnersFilmMVC.Models.Film

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie)
        </dd>

        <dt>
            Year
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            Genre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Genre.genre)
        </dd>

        <dt>
            Actor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>

        <dt>
            Director
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Director.Name)
        </dd>

        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Duration
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Duration)
        </dd>

        <dt>
            IMDB Rating
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>
            Reviews
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Review Title</th>
                    <th>Comment</th>
                    <th>👍</th>
                    <th>Like</th>
                </tr>
                @foreach (var item in Model.Reviews)
                {
                    Random rnd = new Random();
                    int number = rnd.Next(1, 32);
                    int likes = number * item.FilmId;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @likes
                    </td>
                    <td>
                        @Html.ActionLink("Like!", "Like", new { id = item.ReviewId })
                    </td>
                </tr>}
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.FilmId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
